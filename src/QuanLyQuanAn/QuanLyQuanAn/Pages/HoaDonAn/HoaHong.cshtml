@page "/HoaHong"
@model QuanLyQuanAn.Pages.HoaDonAn.HoaHongModel
@{
}


<div class="pagetitle">
    <h1>Hoa hồng tích lũy</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/BanAn">Trang chủ</a></li>
            <li class="breadcrumb-item active">Hoa hồng</li>
        </ol>
    </nav>
</div>

<div class="section">
    <div class="row">
        <div class="col-xxl-12 col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Hoa hồng tích lũy: @Model.TongHH VNĐ</h5>

                    <table class="table datatable">
                        <thead>
                            <tr class="table-secondary">
                                <th scope="col">#</th>
                                <th scope="col">Ca</th>
                                <th scope="col">Giờ bắt đầu</th>
                                <th scope="col">Giờ kết thúc</th>
                                <th scope="col">Hoa hồng</th>
                                <th scope="col">Số lượng HĐ</th>                                
                                @* <th scope="col">Chi tiết</th> *@
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                var i = 1;
                            }
                            @foreach (var calam in Model.CaLams)
                            {
                                double? tonghoahong = 0;
                                var soluonghoadon = 0;

                                foreach (var hoadon in Model.HoaDons)
                                {
                                    if (hoadon.GioRa >= calam.ThoiGianBatDau && hoadon.GioVao <= calam.ThoiGianKetThuc)
                                    {
                                        tonghoahong += hoadon.TienHoaHong;
                                        soluonghoadon++;
                                    }
                                }

                                <tr class="">
                                    <th scope="row">@i</th>
                                    <td>@calam.ThoiGianKetThuc.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@calam.ThoiGianBatDau.Value.ToString("HH:mm")</td>
                                    <td>@calam.ThoiGianKetThuc.Value.ToString("HH:mm")</td>
                                    <td>@tonghoahong VNĐ</td>
                                    <td>@soluonghoadon</td>
                                    @* <td class="text-center">
                                        <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#basicModal" data-id="@calam.Id"><i class="bi bi-justify"></i></button>
                                    </td> *@
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>                    
                </div>
            </div>
        </div>
    </div>
</div>